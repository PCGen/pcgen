<assembly>
  <id>full</id>
  <formats>
      <format>zip</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <includeSiteDirectory>false</includeSiteDirectory>
  <dependencySets>
    <dependencySet>
      <outputDirectory>lib</outputDirectory>
      <useProjectArtifact>false</useProjectArtifact>
    </dependencySet>
  </dependencySets>
  <fileSets>
    <fileSet>
      <directory></directory>
      <filtered>false</filtered>
      <outputDirectory>/</outputDirectory>
      <includes>
        <include>data/**</include>
      </includes>
    </fileSet>
    <!-- binary files, not filtered -->
    <fileSet>
      <directory>code/bin</directory>
      <filtered>false</filtered>
      <outputDirectory>/</outputDirectory>
      <includes>
		<include>batch-convert.jar</include>
		<include>pcgen.sh</include>
		<include>pcgen.exe</include>
		<include>pcgen_low_mem.bat</include>
		<include>filepaths.ini</include>
		<include>autobuild.timestamp</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>code</directory>
      <filtered>false</filtered>
      <outputDirectory>/</outputDirectory>
      <includes>
		<include>pcgen.exe</include>
      </includes>
    </fileSet>
    <!-- Plugins -->
    <fileSet>
      <directory></directory>
      <filtered>false</filtered>
      <outputDirectory>/</outputDirectory>
      <includes>
        <include>plugins/**</include>
      </includes>
    </fileSet>
    <!-- Default logging config -->
    <fileSet>
      <directory></directory>
      <filtered>false</filtered>
      <outputDirectory>/</outputDirectory>
      <includes>
        <include>logging.properties</include>
      </includes>
    </fileSet>
    <!-- Preview -->
    <fileSet>
      <directory></directory>
      <filtered>false</filtered>
      <outputDirectory>/</outputDirectory>
      <includes>
        <include>preview/**</include>
      </includes>
    </fileSet>
    <!-- System folder -->
    <fileSet>
      <directory></directory>
      <filtered>false</filtered>
      <outputDirectory>/</outputDirectory>
      <includes>
        <include>system/**</include>
      </includes>
    </fileSet>
    <!-- Output Sheets -->
    <fileSet>
      <directory></directory>
      <filtered>false</filtered>
      <outputDirectory>/</outputDirectory>
      <includes>
        <include>outputsheets/**</include>
      </includes>
    </fileSet>
  </fileSets>
  <files>
	<file>
      <source>target/${pom.artifactId}-${pom.version}.jar</source>
      <outputDirectory>/</outputDirectory>
      <destName>pcgen.jar</destName>
      <filtered>false</filtered>
	</file>
  </files>
</assembly>