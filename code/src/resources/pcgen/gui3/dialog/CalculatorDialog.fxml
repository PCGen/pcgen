<?import javafx.scene.Scene?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<Scene xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
       fx:controller="pcgen.gui3.dialog.CalculatorDialogController">
    <AnchorPane prefHeight="700" prefWidth="500">
        <BorderPane>
            <top>
                <HBox>
                    <TextField HBox.hgrow="always" fx:id="formulaText"/>
                    <Button text="%in_calculate" onAction="#onCalculate"/>
                    <Button text="%in_clear" onAction="#onClear"/>
                </HBox>
            </top>
            <center>
                <TextArea fx:id="outputText"/>
            </center>
        </BorderPane>
    </AnchorPane>
</Scene>
