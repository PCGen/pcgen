    <property name="zip.batch.file" value="batch-convert.zip" />

    <!-- The jars required to run PCGen -->
    <path id="project.jars">
        <fileset dir="${lib.dir}" includes="**/*.jar" excludes="**/test/**,javacc.jar,**/emma/**" />
    </path>

